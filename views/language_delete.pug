extends layout

block content

  h1 #{title}: #{language.name}
  
  if language_books.length
  
    p #[strong Delete the following books before attempting to delete this language.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Books
    
      dl
      each book in language_books
        dt 
          a(href=book.url) #{book.title}
        dd #{book.summary}

  else
    p Do you really want to delete this Language?
    
    form(method='POST' action='')
      div.form-group
        input#languageid.form-control(type='hidden',name='languageid', required='true', value=language._id )

      button.btn.btn-primary(type='submit') Delete