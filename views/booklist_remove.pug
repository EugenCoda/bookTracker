extends layout

block content
  h3 #{title}: #{book.title}
  
  p Do you really want to remove this Book from your list?
    
  form(method='POST' action='')
    div.form-group
      input#bookid.form-control(type='hidden',name='bookid', required='true', value=book._id )

    button.btn.btn-danger.btn-sm(type='submit') Remove
    | 
    a.btn.btn-secondary.btn-sm(href='/booklists/mylist') Cancel